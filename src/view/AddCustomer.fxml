<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerController">
    <children>
        <Label fx:id="addCustomerLbl" layoutX="219.0" layoutY="42.0" text="Add Customer">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <GridPane layoutX="148.0" layoutY="95.0" prefHeight="275.0" prefWidth="311.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="96.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="199.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="nameLbl" text="Name" />
                <Label fx:id="addressLbl" text="Address" GridPane.rowIndex="1" />
                <Label fx:id="cityLbl" text="City" GridPane.rowIndex="2" />
                <Label fx:id="countryLbl" text="Country" GridPane.rowIndex="3" />
                <Label fx:id="zipCodeLbl" text="Zip Code" GridPane.rowIndex="4" />
                <Label fx:id="phoneNumberLbl" text="Phone Number" GridPane.rowIndex="5" />
                <TextField fx:id="nameTxt" maxHeight="-Infinity" prefHeight="35.0" GridPane.columnIndex="1" />
                <TextField fx:id="addressTxt" maxHeight="-Infinity" prefHeight="35.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="countryTxt" maxHeight="-Infinity" prefHeight="35.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="zipCodeTxt" maxHeight="-Infinity" prefHeight="35.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="phoneNumberTxt" maxHeight="-Infinity" prefHeight="35.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <ComboBox fx:id="cityComboBox" maxHeight="-Infinity" onAction="#onActionSetCountry" prefHeight="35.0" prefWidth="203.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <Button fx:id="cancelAddCustomerBtn" layoutX="425.0" layoutY="423.0" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onActionCancelAddCustomer" prefWidth="80.0" text="Cancel" />
        <Button fx:id="saveCustomerBtn" layoutX="335.0" layoutY="423.0" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onActionSaveAddCustomer" prefWidth="80.0" text="Save" />
    </children>
</AnchorPane>
